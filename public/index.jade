      // couple of variables to help make the logos the same size
      - var logoWidth = 100
      - var logoHeight = 50
      - var logoDimensions = 'width:' + logoWidth + 'px; height:' + logoHeight + 'px'
      .container
        .row
          .col-lg-2.col-lg-offset-5
            hr.marginbot-50
        .row
          for job in jobs
            .col-sm-4.col-md-4.col-lg-4
              .wow.fadeInLeft(data-wow-delay='0.2s')
                .service-box
                  .service-icon
                    img(src='img/icons/' + job.icon, style= logoDimensions,  alt='')
                  .service-desc
                    h5= job.title
                    each line, val in job.description
                      if val % 2 == 0
                        p= line 
                      else
                        p
                          b= line

    // Section: contact
    section#contact.home-section.text-center
      .heading-contact
        .container
          .row
            .col-lg-8.col-lg-offset-2
              .wow.bounceInDown(data-wow-delay='0.2s')
                .section-heading
                  h2 Get in touch
      .container
        .row
          .col-lg-2.col-lg-offset-3
            .wow.bounceInDown(data-wow-delay='0.3s')
              a(href="https://github.com/andreirtaylor")
                i.fa.fa-github.fa-5x.text-center
                p Github
          .col-lg-2
            .wow.bounceInDown(data-wow-delay='0.3s')
              a(href="https://ca.linkedin.com/pub/andrei-ryan-taylor/2a/86a/aa9/en")
