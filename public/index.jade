    // Section: about
    section#about.home-section.text-center
      .heading-about
        .container
          .row
            .col-lg-8.col-lg-offset-2
              .wow.bounceInDown(data-wow-delay='0.4s')
                .section-heading
                  h2 About Me
        .container
          .row.col-lg-4.col-lg-offset-2.col-md-4.col-md-offset-1.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
            .wow.slideInLeft(data-wow-delay='0.2s')
              img.img-responsive.img-circle(src='img/andreiprofile.png', alt='', style=projDimensions)
          .row4.col-lg-4.col-md-6.col-sm-10.col-sm-offset-1.col-xs-10.col-xs-offset-1
            .wow.slideInRight(data-wow-delay='0.3s')
              br
              h4
                | I am a 3rd year Software Engineering student at the University of Victoria.
                | I in the past I have been the President of UVic AERO and an Account Manager for an Industrial Publishing Company.
                | I spend much of my spare time learning about technology and working on open source projects. 
                If you are looking for a dedicated and driven individual to join your team than look no further.
              p
                h3.
                  Languages: Javascript, C++, Python, Java
        br
        a.btn.btn-success.wow.slideInRight(type="button" href='/resume.pdf' data-wow-delay='0.4s')
          h1(style="margin:0")= "Resume "
            i.fa.fa-file-text-o.animated

    //=============Projects================
    // couple of variables to help make the logos the same size
    - var projWidth = 223
    - var projHeight = 223
    - var projDimensions = 'width:' + projWidth + 'px; height:' + projHeight + 'px' + ';margin: 0 auto' 
    section#projects.home-section.text-center
      .heading-about
        .container
          .row
            .col-lg-8.col-lg-offset-2
              .wow.bounceInDown(data-wow-delay='0.1s')
                .section-heading
                  h2 Extra Cirricular Projects 
      .container
        .row
          .col-lg-2.col-lg-offset-5
            hr.marginbot-50
        .row
          .col-xs-12.col-sm-6.col-lg-3
            - var AeroURl = "http://www.aero-ug.uvic.ca/index.php"
            .wow.bounceInUp(data-wow-delay='0.2s')
              .team.boxed-grey
                .inner
                  h5 Uvic Aero
                  |         
                  p.subtitle 
                  |  Aero is a student lead team that participates in unmanned aircraft competitions.
                  |  I designed and implemented a tracking algorithm that points an antenna at the plane to allow live image capture 
                  .avatar
                    a(href=AeroURl)
                      img.img-responsive.img-circle(src='img/team/aero.jpeg', alt='', style=projDimensions)
                  p.subtitle 
                  | languages: C and C++ 
                  p.subttle(style="margin:0px")
                    a(href=AeroURl)= "website"
          .col-xs-12.col-sm-6.col-lg-3
            - var boardGameTrackingURL = "http://www.boardgametracking.com"
            .wow.bounceInUp(data-wow-delay='0.25s')
              .team.boxed-grey
                .inner
                  h5 Board Game Tracking
                  |                         
                  p.subtitle 
                  |  A Web application that allows real time tracking of money in board games like Monopoly or Powergrid. 
                  |  The server is Nodejs with Express Middleware, the frontend logic is controlled with Angular JS
                  .avatar
                    a(href=boardGameTrackingURL)
                      img.img-responsive.img-circle(src='img/team/BGT.png', alt='', style=projDimensions)
                  p.subtitle
                  |  language: Javascript
                  p.subttle(style="margin:0px")
                    a(href=boardGameTrackingURL)= "website,   "
                      span
                        a(href="https://github.com/andreirtaylor/MoneyTracker") github
          .col-xs-12.col-sm-6.col-lg-3
            - var battleSnakeURL = "http://www.battlesnake.io"
            .wow.bounceInUp(data-wow-delay='0.3s')
              .team.boxed-grey
                .inner
                  h5 Battle Snake
                  p.subtitle 
                  |  Wrote an algorithm to control a snake in a battle arena. 
                  |  The snake was controlled through a restful api,
                  |  we wrote our server using bottle and guinicorn
                  .avatar
                    a(href=battleSnakeURL)
                      img.img-responsive.img-circle(src='img/team/battlesnake.jpg', alt='', style=projDimensions)
                  p.subtitle
                  |  language: Python
                  p.subttle(style="margin:0px")
                    a(href=battleSnakeURL)= "website,   "
                      span
                        a(href="https://github.com/cpjk/bs") github
          .col-xs-12.col-sm-6.col-lg-3
            - var MPGUrl = "http://engenuics.com/mpg/mpg-students/mpg-level-2-atmel/"
            .wow.bounceInUp(data-wow-delay='0.35s')
              .team.boxed-grey
                .inner
                  h5 MPG Microprocessor Training
                  p.subtitle
                  | MPG is a hands-on training course for embedded systems.
                  | I programed the board to play pong wirelessly against others. 
                  | I learned about programming embedded systems and building circuits
                  .avatar
                    a(href=MPGUrl)
                     img.img-responsive.img-circle(src='img/team/MPG.jpg', alt='', style=projDimensions)
                  p.subtitle
                  |  language: C
                  p.subttle(style="margin:0px")
                    a(href=MPGUrl)= "website"
